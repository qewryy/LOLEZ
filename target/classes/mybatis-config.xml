<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>

	<typeAliases>
		<typeAlias type="com.lolez.dto.MemberDto" alias="member" />
		<typeAlias type="com.lolez.dto.BoardDto" alias="board" />
		<typeAlias type="com.lolez.dto.ReplyDto" alias="reply" />
		<typeAlias type="com.lolez.dto.EmailDto" alias="email" />
	</typeAliases>


	<mappers>
		<mapper resource="mapper/member/memberMapper.xml" />
		<mapper resource="mapper/board/boardMapper.xml" />
		<mapper resource="mapper/email/emailMapper.xml" />
	</mappers>
</configuration>